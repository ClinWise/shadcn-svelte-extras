{
	"$schema": "https://unpkg.com/jsrepo@1.19.0/schemas/registry-config.json",
	"dirs": ["./src/lib/components", "./src/lib"],
	"doNotListBlocks": [
		"utils",
		"is-active",
		"is-mobile.svelte",
		"is-number",
		"badge",
		"breadcrumb",
		"card",
		"command",
		"dialog",
		"drawer",
		"dropdown-menu",
		"input",
		"label",
		"popover",
		"prev-next",
		"scroll-area",
		"separator",
		"sheet",
		"sidebar",
		"skeleton",
		"tabs",
		"tooltip"
	],
	"doNotListCategories": [],
	"excludeDeps": ["svelte"],
	"includeBlocks": [],
	"includeCategories": ["ui", "hooks", "utils"],
	"preview": true,
	"rules": {
		"no-category-index-file-dependency": "warn",
		"no-unpinned-dependency": "warn",
		"require-local-dependency-exists": "error",
		"max-local-dependencies": ["warn", 10],
		"no-circular-dependency": "error",
		"no-unused-block": "warn",
		"no-framework-dependency": "error"
	}
}
